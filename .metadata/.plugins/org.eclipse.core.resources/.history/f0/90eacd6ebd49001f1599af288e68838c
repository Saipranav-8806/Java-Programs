* * * *
 
*/
public class TriangleStarPyramaid {
	public static void pattern(int num) {
//		Oter Loop
		for(int i = 1; i<=num;i++) {
			System.out.println("l");
//			Loop For Spaces
			for(int j =i;j<num;j++) {
				System.out.print(" ");
			}
			for(int j=1;j<=i;j++) {
				System.out.print("* ");
			}
			System.out.println();
		}
		
	}	

	public static void main(String[] args) {
		pattern(4);
		
		// TODO Auto-generated method stub

	}

}
