/*
    *		4,0	 
   * *  	3,1 
  *   *		2,3
 *     *	1,5  
* * * * *

 */
public class HollowTrianglePattern {

	public static void main(String[] args) {
		int num =5;
		for(int i = 1;i<num;i++) {
			for(int j =i;j<num;j++) {
				System.out.print(" ");
			}
					
//			inner SPAce
			for(int j =1; j<=(2*i)-1;j++) {
				System.out.print("*");
			}
			System.out.print("*");
			System.out.println();
			
			
		}
			
		
			
	}
}
