package java_app1;

public class HollowReverseTriangle {
	public static void main(String[] args) {
		int num=5;
		for(int i = 1;i<=num;i++) {
			if(i>1) {
				for(int j =i;j<i;j++) {
					System.out.print("0");
				}
				for(int j = i;j<=i*2-1;j++) {
					if(j==i || j==i*2-2) {
						System.out.print("*");
					}
					else {
						System.out.print(" ");
					}
				}
				System.out.println();
			}
			
		}
		
	}

}
