/*
    *		4,0	 
   * *  	3,1 
  *   *		2,3
 *     *	1,5  
* * * * *

 */
public class HollowTrianglePattern {

	public static void main(String[] args) {
		int num =5;
		for(int i = 0;i<num;i++) {
			for(int j =i;j<num-1;j++) {
				System.out.print("l");
			}
			System.out.print("*");
			
			
			
//			inner SPAce
			for(int j =0; j<=i+1;j++) {
				System.out.print("k");
			}
			System.out.println();
		}
			
		
			
	}
}
