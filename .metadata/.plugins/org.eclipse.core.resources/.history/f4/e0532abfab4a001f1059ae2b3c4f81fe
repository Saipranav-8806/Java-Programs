package java_app1;

public class HallowDiamondPyramid {

	public static void main(String[] args) {
		int num =6;
		for(int i =0;i<=num;i++) {
			for(int j = 1;j<num;j++) {
				System.out.print("p");
			}
			System.out.println();
		}
		
		// TODO Auto-generated method stub

	}
}