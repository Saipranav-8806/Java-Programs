/*
    *		4,0	 
   * *  	3,1 
  *   *		2,3
 *     *	1,5  
* * * * *

 */
public class HollowTrianglePattern {

	public static void main(String[] args) {
		int num =5;
		for(int i = 0;i<num;i++) {
//			Front Spaces
			for(int j = num-i;j>0;j--) {
				System.out.print("k");
			}
			System.out.print("*");
			
			for(int j = i;j<=i;j++) {
				System.out.print("j");
			}
			System.out.println();
		}
		// TODO Auto-generated method stub

	}

}
