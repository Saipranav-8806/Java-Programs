public class ButterFlyStar {
	public static void pattern(int num) {
		for(int i =1;i<=num*2;i++) {
			for(int j =0;j<=i;j++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}
	public static void main(String[] args) {
		pattern(3);		
	}
}
