/*
    *		4,0	 
   * *  	3,1 
  *   *		2,3
 *     *	1,5  
* * * * *

 */
public class HollowTrianglePattern {

	public static void main(String[] args) {
		int num =5;
		for(int i = 1;i<num;i++) {
			for(int j =i;j<num;j++) {
				System.out.print(" ");
			}
					
//			inner SPAce
			for(int k =1; k<=(2*i)-1;k++) {
				if(k==1||k==num|| k==(2*i-1)) {
					System.out.print("*");
				}
				else
					System.out.print(" ");
			}
//			System.out.print("*");
			System.out.println();
			
			
		}
			
		
			
	}
}
