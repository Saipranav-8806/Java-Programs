/*
 
*    *
**  **
******
******
**  **
*    *



            

*/

public class ButterFlyStar {
	public static void pattern(int num) {
		for(int i =1;i<=num*2;i++) {
			if(i<=num) {

				for(int j =1;j<=i;j++) {
					System.out.print("*");
				}
			}
			
			else {
				for(int j=i;j<=(num*2);j++) {
					System.out.print("*");
				}
			}
			
//			For Loop For Spaces
			for(int j =(num);j>=i;j--) {
				if(i>=1 && i<=(num-1)) {
					System.out.print("p");
				}
				else {
					if(i>=(num+1) && i<=(num*2)-1) {
						System.out.print("p");
					}

				}
			}
			System.out.println();
		}
	}
	public static void main(String[] args) {
		pattern(3);		
	}
}
