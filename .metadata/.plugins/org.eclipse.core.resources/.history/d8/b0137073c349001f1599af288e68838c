/*
 1 2 3  4
 2 3 4
 3 4
 4
 3 4
 2 3 4
 1 2 3 4
 
 
 
 */

import java.util.Scanner;

public class MirrorImageTriangle {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Enter The Number: ");
		int num = sc.nextInt();
		for(int i = 1 ; i<=num;i++) {
			
			for(int j = num;j>0;j++) {
				System.out.print(" ");
			}
			for(int j=i;j<=num;j++) {
				System.out.print(j+" ");
			
			}
			System.out.println();
		}
	}
}
