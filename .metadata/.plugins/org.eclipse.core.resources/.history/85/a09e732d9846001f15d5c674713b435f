/*
 
*    * ; 1,4,1
**  ** ; 2,2,2
****** ; 6
****** ; 6
**  ** ; 2,2,2
*    * ; 1;4;1

*/


public class ButterFlyStar {
	public static void pattern(int num) {
		for(int i = 1;i<num*2 ; i++) {
			if(i<=num) {
				for(int j=1; j<=i;j++) {
					System.out.print("*");
				}
//				Spaces
				for(int j=1;j<=((num*2)-2)/i;j++) {
					System.out.print("p");
				}
				System.out.println();
			}
		}
	}
	public static void main(String[] args) {
		pattern(3);		
	}
}
