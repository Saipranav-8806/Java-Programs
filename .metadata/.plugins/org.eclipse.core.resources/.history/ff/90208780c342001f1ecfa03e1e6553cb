import java.util.Scanner;

//   *
//  * *
// * * *
//* * * *

public class pattren3 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int num = sc.nextInt();
//		Outer Loop
		for(int i=1;i<=num;i++) {
//			Inner Loop for Spaces	
			for(int j=num-1 ; j>=0;j--) {
				System.out.print(" ");
			}
//			Inner Loop for Starts
			for(int j = 1;j<=i;j++) {
				System.out.print(" *");
			}
			System.out.println();
		}
		
	}

}
