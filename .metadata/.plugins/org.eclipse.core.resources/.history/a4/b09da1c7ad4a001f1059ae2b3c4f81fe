


/*
     * 		5,*
    * *5	4*1*
   *   *4	3*3*
  *     *3
 *       *2
*         *1
 *       *
  *     *
   *   *
    * *
     *
*/


package java_app1;

public class HallowDiamondPyramid {

	public static void main(String[] args) {
		int num =6;
		for(int i =num;i>0;i--) {
			for(int j = num;j>i;j--) {
				System.out.print("p");
			}
			for(int j= num ;j=num;j--) {
				if(j==i||j==i*2-1) {
					System.out.print("*");
				}
				else System.out.print("0");
				
			}
			System.out.println();
		}
		
		// TODO Auto-generated method stub

	}
}