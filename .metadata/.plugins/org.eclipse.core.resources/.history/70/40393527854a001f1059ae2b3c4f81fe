package java_app1;

public class HollowReverseTriangle {
	public static void main(String[] args) {
		int num=5;
		for(int i = 1;i<=num;i++) {
			if(i>1) {
				for(int j =1;j<=i;j++) {
					System.out.print("0");
				}
				System.out.println();
			}
			
		}
		
	}

}
