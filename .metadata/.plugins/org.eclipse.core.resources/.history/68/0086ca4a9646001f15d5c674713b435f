public class ButterFlyStar {
	public static void pattern(int num) {
		for (int i=0; i<num; i++) {
			for(int j=0; j<i;j++) {
			System.out.print('*');
			}
			System.out.println();
		}
//		System.out.println();
		for (int i=0; i<num; i++) {
			for(int j=i; j<0;j--) {
			System.out.print('*');
			}
			System.out.println();
		}
	}
	public static void main(String[] args) {
		pattern(3);		
	}
}
