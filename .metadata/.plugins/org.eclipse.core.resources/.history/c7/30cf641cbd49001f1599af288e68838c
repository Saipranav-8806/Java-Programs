public class TriangleStarPyramaid {
	public static void pattern(int num) {
//		Oter Loop
		for(int i = 0; i<=num;i++) {
//			Loop For Spaces
			for(int j =i;j<=num;j++) {
				System.out.print("k");
			}
			System.out.println();
		}
		
	}	

	public static void main(String[] args) {
		pattern(4);
		
		// TODO Auto-generated method stub

	}

}
