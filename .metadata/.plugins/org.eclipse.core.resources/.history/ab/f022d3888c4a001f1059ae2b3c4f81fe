


/*
     *6
    * *5
   *   *4
  *     *3
 *       *2
*         *1
 *       *
  *     *
   *   *
    * *
     *
*/


package java_app1;

public class HallowDiamondPyramid {

	public static void main(String[] args) {
		int num =6;
		for(int i =num;i>=0;i--) {
			for(int j = 1;j<=i-1;j++) {
				System.out.print(";");
			}
			for(int j = 2;j<=2*i-1;j++){
			    if(j==i||j==2*i-1){
			        System.out.print("j");    
			    }
			    else System.out.print("l");
			   
			    
			    
			}
			
			System.out.println();
			
		}
		// TODO Auto-generated method stub

	}
}