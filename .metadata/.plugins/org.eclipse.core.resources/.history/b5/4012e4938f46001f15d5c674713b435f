*/

public class ButterFlyStar {
	public static void pattern(int num) {
		for(int i =1;i<=num*2;i++) {
			if(i<=num) {

				for(int j =1;j<=i;j++) {
					System.out.print("*");
				}
			}
			else {
				for(int j=i;j<=num;j++) {
					System.out.print("*");
				}
			}
			System.out.println();
		}
	}
	public static void main(String[] args) {
		pattern(3);		
	}
}
