
public class Intrest_Calucator {

	public static void main(String[] args) {
		int amount = 100000;
		int intrestRate = 7;
		int year = 5;
		int waitingYear = 5;
		double totalAmount = 0;
		double rateOfIntrest = amount * intrestRate /100;
		double temp = 0;
		
		for(int i =0;i<year;i++) {
			totalAmount = totalAmount+amount + rateOfIntrest;
			temp = temp + totalAmount;
			
		}
		System.out.println("Aount For 5Years: "+temp);
		temp = temp + (temp * intrestRate /100)*5;
		System.out.println(temp);
			
	}

}
