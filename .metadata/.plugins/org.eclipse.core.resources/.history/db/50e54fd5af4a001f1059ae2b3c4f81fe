


/*
     * 		5,*
1234*6*5	4*1*
123*567*4	3*3*
12*45678*3
 *       *2
*         *1
 *       *
  *     *
   *   *
    * *
     *
*/


package java_app1;

public class HallowDiamondPyramid {

	public static void main(String[] args) {
		int num =6;
		for(int i =1;i<=num;i++) {
			for(int j =i;j<num;j++) {
				System.out.print(" ");
			}
			for(int j =1;j<=i*2-1;j++) {
				if(j==1 || j==2*i-1) {
					System.out.print("*");
				}
				else System.out.print(" ");
				
			}
			System.out.println();
		}
		
		// TODO Auto-generated method stub

	}
}